<h3>Наши клиенты</h3>

<table class="table">
  <tr>
    <th>Имя</th>
    <th>Телефон</th> 
    <th>Дата</th>
    <th>Барбер</th>
  </tr>
  <% @clients.each do |client| %>
	  <tr>
	    <td><a href="/client/<%= client.id %>"><%=client.name %></a></td>
	    <td><%=client.phone %></td> 
	    <td><%=client.datestamp %></td>
	    <td><%=client.barber %></td>
	  </tr>
  <% end %>
</table>
 